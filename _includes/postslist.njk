<div class="posts-grid">
{%- for post in postslist | reverse %}
	<div class="post-card{% if post.url == url %} post-card-active{% endif %}">
		<div class="post-cover">
			<picture>
				{%- if post.url == '/blog/momentum-scrolling/' %}
				<!-- Dark mode cover -->
				<source media="(prefers-color-scheme: dark)" type="image/webp" srcset="/img/momentum-scrolling-cover-dark-300.webp 1x, /img/momentum-scrolling-cover-dark-600.webp 2x, /img/momentum-scrolling-cover-dark-900.webp 3x">
				<source media="(prefers-color-scheme: dark)" type="image/jpeg" srcset="/img/momentum-scrolling-cover-dark-300.jpg 1x, /img/momentum-scrolling-cover-dark-600.jpg 2x, /img/momentum-scrolling-cover-dark-900.jpg 3x">
				<!-- Light mode cover (default) -->
				<source type="image/webp" srcset="/img/momentum-scrolling-cover-300.webp 1x, /img/momentum-scrolling-cover-600.webp 2x, /img/momentum-scrolling-cover-900.webp 3x">
				<source type="image/jpeg" srcset="/img/momentum-scrolling-cover-300.jpg 1x, /img/momentum-scrolling-cover-600.jpg 2x, /img/momentum-scrolling-cover-900.jpg 3x">
				<img src="/img/momentum-scrolling-cover-300.jpg" alt="Bezier curve visualization">
				{%- elif post.url == '/blog/hardest-bug/' %}
				<source type="image/webp" srcset="/img/hardest-bug-cover-300.webp 1x, /img/hardest-bug-cover-600.webp 2x, /img/hardest-bug-cover-900.webp 3x">
				<source type="image/jpeg" srcset="/img/hardest-bug-cover-300.jpg 1x, /img/hardest-bug-cover-600.jpg 2x, /img/hardest-bug-cover-900.jpg 3x">
				<img src="/img/hardest-bug-cover-300.jpg" alt="Debugging visualization">
				{%- elif post.url == '/blog/closure-npm-export/' %}
				<!-- Dark mode cover -->
				<source media="(prefers-color-scheme: dark)" type="image/webp" srcset="/img/closure-npm-export-cover-dark-300.webp 1x, /img/closure-npm-export-cover-dark-600.webp 2x, /img/closure-npm-export-cover-dark-900.webp 3x">
				<source media="(prefers-color-scheme: dark)" type="image/jpeg" srcset="/img/closure-npm-export-cover-dark-300.jpg 1x, /img/closure-npm-export-cover-dark-600.jpg 2x, /img/closure-npm-export-cover-dark-900.jpg 3x">
				<!-- Light mode cover (default) -->
				<source type="image/webp" srcset="/img/closure-npm-export-cover-300.webp 1x, /img/closure-npm-export-cover-600.webp 2x, /img/closure-npm-export-cover-900.webp 3x">
				<source type="image/jpeg" srcset="/img/closure-npm-export-cover-300.jpg 1x, /img/closure-npm-export-cover-600.jpg 2x, /img/closure-npm-export-cover-900.jpg 3x">
				<img src="/img/closure-npm-export-cover-300.jpg" alt="Google Closure Compiler logo">
				{%- elif post.url == '/blog/infinite-currying-sum/' %}
				<!-- Dark mode cover -->
				<source media="(prefers-color-scheme: dark)" type="image/webp" srcset="/img/lambda-cover-dark-300.webp 1x, /img/lambda-cover-dark-600.webp 2x, /img/lambda-cover-dark-900.webp 3x">
				<source media="(prefers-color-scheme: dark)" type="image/jpeg" srcset="/img/lambda-cover-dark-300.jpg 1x, /img/lambda-cover-dark-600.jpg 2x, /img/lambda-cover-dark-900.jpg 3x">
				<!-- Light mode cover (default) -->
				<source type="image/webp" srcset="/img/lambda-cover-300.webp 1x, /img/lambda-cover-600.webp 2x, /img/lambda-cover-900.webp 3x">
				<source type="image/jpeg" srcset="/img/lambda-cover-300.jpg 1x, /img/lambda-cover-600.jpg 2x, /img/lambda-cover-900.jpg 3x">
				<img src="/img/lambda-cover-300.jpg" alt="Lambda symbol">
				{%- else %}
				<source type="image/webp" srcset="/img/blog-default-cover-1000.webp 1x, /img/blog-default-cover-2000.webp 2x, /img/blog-default-cover-3000.webp 3x">
				<source type="image/jpeg" srcset="/img/blog-default-cover-1000.jpg 1x, /img/blog-default-cover-2000.jpg 2x, /img/blog-default-cover-3000.jpg 3x">
				<img src="/img/blog-default-cover-1000.jpg" alt="Blog post cover">
				{%- endif %}
			</picture>
		</div>
		<div class="post-content">
			<h3 class="post-title"><a href="{{ post.url }}">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a></h3>
			<p class="post-description">{{ post.data.description }}</p>
			<div class="post-link-container"><a href="{{ post.url }}" class="project-link">Read Post â†’</a></div>
			<time class="post-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate("LLLL yyyy") }}</time>
		</div>
	</div>
{%- endfor %}
</div>
